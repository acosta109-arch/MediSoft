@page "/"
@inject PacientesService pacientesService

<style>
    .card {
        transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }
</style>

<PageTitle>Inicio</PageTitle>
<div class="container bg-transparent">
    <h2 class="text-center text-primary mt-3 mb-4">Bienvenido/a a MediSoft</h2>
    <div class="row">
        <!-- Pacientes Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-header bi bi-person-arms-up">  Pacientes</div>
                <div class="card-body">
                    <h1><i class="bi bi-person-arms-up"></i></h1>
                    <p class="card-text">Registrados: @pacientesCount</p>
                </div>
            </div>
        </div>
        <!-- Doctores Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-header bi bi-person-badge-fill">  Doctores</div>
                <div class="card-body">
                    <h1><i class="bi bi-person-badge-fill"></i></h1>
                    <p class="card-text">Registrados: 12</p>
                </div>
            </div>
        </div>
        <!-- Citas Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-header bi bi-calendar-week-fill">  Citas</div>
                <div class="card-body">
                    <h1><i class="bi bi-calendar-week-fill"></i></h1>
                    <p class="card-text">Citas programadas: 8</p>
                </div>
            </div>
        </div>
        <!-- Especialidades Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-header bi bi-journal-medical">  Especialidades</div>
                <div class="card-body">
                    <h1><i class="bi bi-journal-medical"></i></h1>
                    <p class="card-text">Registradas: 15</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Noticias Table -->
    <div class="mt-4">
        <h3 class="text-center text-primary">Noticias del Centro Médico</h3>
        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark text-center text-info">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descripción</th>
                </tr>
            </thead>
            <tbody class="text-center">
                <tr>
                    <td>1</td>
                    <td>Actualización en el sistema de gestión de pacientes.</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Nueva ala de pediatría inaugurada.</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Jornada de vacunación masiva este fin de semana.</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Se amplían horarios de consulta para especialidades.</td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Nuevo equipo de resonancia magnética disponible.</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@code {
    private int pacientesCount;

    protected override async Task OnInitializedAsync()
    {
        pacientesCount = await pacientesService.GetPacientesCountAsync();
    }
}
