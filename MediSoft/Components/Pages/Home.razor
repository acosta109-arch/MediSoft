@page "/"


<style>
    .card {
        transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

    .card-header img {
        width: 24px;
        height: 24px;
        vertical-align: middle;
    }

    .card-body img {
        width: 3rem; /* Ajustar tamaño a medio */
        height: 3rem; /* Ajustar tamaño a medio */
        display: block;
        margin: 0 auto;
    }

    .table-custom {
        border-collapse: separate;
        border-spacing: 0;
        border: 1px solid #ddd;
        border-radius: 0.5rem;
        overflow: hidden;
        margin-top: 20px;
    }

        .table-custom th, .table-custom td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        .table-custom thead {
            background-color: #4267B2; /* Color azul de Facebook */
            color: #fff;
        }

        .table-custom tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table-custom tbody tr:hover {
            background-color: #eaeaea;
        }

        .table-custom th {
            font-weight: bold;
        }
</style>

<PageTitle>Inicio</PageTitle>
<div class="container bg-transparent">
    <h2 class="text-center text-primary mt-3 mb-4">Bienvenido/a a MediSoft</h2>
    <div class="row">
        <!-- Pacientes Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-header">
                    <img src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Medical Icon"> Pacientes
                </div>
                <div class="card-body">
                    <img src="https://cdn-icons-png.flaticon.com/512/706/706215.png" alt="Medical Icon">
                    <p class="card-text">Registrados: 100</p>
                </div>
            </div>
        </div>
        <!-- Doctores Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-header">
                    <img src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Medical Icon"> Doctores
                </div>
                <div class="card-body">
                    <img src="https://cdn-icons-png.flaticon.com/512/3461/3461551.png" alt="Medical Icon">
                    <p class="card-text">Registrados: 12</p>
                </div>
            </div>
        </div>

        <!-- Doctores Disponibles Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-header">
                    <img src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Medical Icon"> Doctores Disponibles
                </div>
                <div class="card-body">
                    <img src="https://cdn-icons-png.freepik.com/512/4850/4850909.png" alt="Medical Icon">
                    <p class="card-text">Disponibles: 5</p>
                </div>
            </div>
        </div>

        <!-- Citas Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-header">
                    <img src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Medical Icon"> Citas
                </div>
                <div class="card-body">
                    <img src="https://cdn-icons-png.flaticon.com/512/5980/5980048.png" alt="Medical Icon">
                    <p class="card-text">Citas programadas: 8</p>
                </div>
            </div>
        </div>

        <!-- Noticias Card -->
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-header">
                    <img src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Medical Icon"> Noticias
                </div>
                <div class="card-body">
                    <img src="https://cdn-icons-png.flaticon.com/512/600/600805.png" alt="Medical Icon">
                    <p class="card-text">Noticias: 5</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Noticias Table -->
    <div class="mt-4">
        <h3 class="text-center text-primary">Noticias del Centro Médico</h3>
        <table class="table table-custom">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descripción</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Actualización en el sistema de gestión de pacientes.</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Nueva ala de pediatría inaugurada.</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Jornada de vacunación masiva este fin de semana.</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Se amplían horarios de consulta para especialidades.</td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Nuevo equipo de resonancia magnética disponible.</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

