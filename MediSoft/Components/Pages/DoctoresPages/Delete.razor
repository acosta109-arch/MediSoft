@page "/Doctores/Delete/{DoctorId:int}"
@using MediSoft.Models
@using MediSoft.Services
@inject NavigationManager NavigationManager
@inject DoctoresService doctoresService

@rendermode InteractiveServer

<style>
    :root {
        --primary-bg-color: #f8f9fa; /* Light background color */
        --header-bg-color: #3b5998; /* Header background color */
        --header-text-color: white; /* Header text color */
        --table-header-bg-color: #3b5998; /* Table header background color */
        --table-header-text-color: white; /* Table header text color */
        --table-bg-color: white; /* Table background color */
        --btn-primary-bg-color: #3b5998; /* Primary button background color */
        --btn-secondary-bg-color: #6c757d; /* Secondary button background color */
        --btn-danger-bg-color: #dc3545; /* Danger button background color */
        --btn-text-color: white; /* Button text color */
        --card-bg-color: white; /* Card background color */
        --card-border-color: #ddd; /* Card border color */
        --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Card shadow */
        --input-border-color: #ccc; /* Input border color */
        --label-text-color: #000; /* Default label text color */
        --text-color: #000; /* Default text color */
    }

    [data-theme="dark"] {
        --primary-bg-color: #343a40; /* Dark background color */
        --header-bg-color: #1e2125; /* Dark header background color */
        --header-text-color: #e9ecef; /* Dark header text color */
        --table-header-bg-color: #1e2125; /* Dark table header background color */
        --table-header-text-color: #e9ecef; /* Dark table header text color */
        --table-bg-color: #495057; /* Dark table background color */
        --btn-primary-bg-color: #1e2125; /* Dark primary button background color */
        --btn-secondary-bg-color: #6c757d; /* Dark secondary button background color */
        --btn-danger-bg-color: #dc3545; /* Danger button background color */
        --btn-text-color: #e9ecef; /* Dark button text color */
        --card-bg-color: #495057; /* Dark card background color */
        --card-border-color: #6c757d; /* Dark card border color */
        --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); /* Dark card shadow */
        --input-border-color: #6c757d; /* Dark input border color */
        --label-text-color: #e9ecef; /* Label text color in dark mode */
        --text-color: #e9ecef; /* Dark text color */
    }

    body {
        background-color: var(--primary-bg-color);
        color: var(--text-color);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--header-bg-color);
        color: var(--header-text-color);
        padding: 10px 20px;
        border-radius: 8px;
    }

    .filter-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .filter-row .form-label {
            font-weight: bold;
            margin-right: 10px;
            color: var(--label-text-color); /* Use variable for label color */
        }

    .table-responsive {
        border-radius: 8px;
        box-shadow: var(--card-shadow);
    }

    .table thead {
        background-color: var(--table-header-bg-color);
        color: var(--table-header-text-color);
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-custom {
        border-radius: 50px;
        font-size: 0.9rem;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        border-radius: 50%;
        color: var(--btn-text-color);
        transition: background-color 0.2s ease;
    }

        .btn-icon.btn-primary {
            background-color: var(--btn-primary-bg-color);
        }

        .btn-icon.btn-secondary {
            background-color: var(--btn-secondary-bg-color);
        }

        .btn-icon.btn-danger {
            background-color: var(--btn-danger-bg-color);
        }

        .btn-icon:hover {
            filter: brightness(1.2);
        }

    .form-control {
        border-color: var(--input-border-color);
    }

    .card {
        background-color: var(--card-bg-color);
        border-color: var(--card-border-color);
        box-shadow: var(--card-shadow);
        color: var(--text-color);
    }

    .detail-label {
        font-weight: bold;
    }

    .detail-value {
        color: var(--text-color);
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="header text-center">
            <h3><strong>Eliminar el Doctor</strong></h3>
        </div>

        @if (doctor != null)
        {
            <div class="card-body p-4">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="detail-label">ID:</div>
                        <div class="detail-value">@doctor.DoctorId</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">Nombre:</div>
                        <div class="detail-value">@doctor.Nombre</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">Apellido:</div>
                        <div class="detail-value">@doctor.Apellido</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">Teléfono:</div>
                        <div class="detail-value">@doctor.Telefono</div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="detail-label">Email:</div>
                        <div class="detail-value">@doctor.Email</div>
                    </div>
                </div>

                <hr />

                <div class="header text-center">
                    <h4><strong>Especialidades del Doctor</strong></h4>
                </div>

                @if (doctor.DetalleDoctores != null && doctor.DetalleDoctores.Any())
                {
                    <div class="table-responsive mt-3">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Especialidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in doctor.DetalleDoctores)
                                {
                                    <tr>
                                        <td>@detalle.Especialidad</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">No hay especialidades...</div>
                }

                <div class="card-footer bg-light d-flex justify-content-end mt-3">
                    <a href="/Doctores/Index" class="btn btn-primary btn-custom"><i class="fas fa-arrow-left"></i> Volver</a>
                    <button class="btn btn-danger btn-custom ms-3" @onclick="EliminarDoctor">Eliminar</button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    public Doctores? doctor = new Doctores();

    [Parameter]
    public int DoctorId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await BuscarDoctor();
    }

    public async Task BuscarDoctor()
    {
        doctor = await doctoresService.Buscar(DoctorId);
    }

    private async Task EliminarDoctor()
    {
        if (doctor != null)
        {
            await doctoresService.Eliminar(DoctorId);
            NavigationManager.NavigateTo("/Doctores/Index");
        }
    }
}

