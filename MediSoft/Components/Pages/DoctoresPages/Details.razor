@page "/Doctores/Details/{DoctorId:int}"
@using MediSoft.Models
@using MediSoft.Services
@inject NavigationManager NavigationManager
@inject DoctoresService doctoresService

@rendermode InteractiveServer

<style>
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #3b5998;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .header h3 {
            margin: 0;
        }

    .filter-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .filter-row .form-label {
            font-weight: bold;
            margin-right: 10px;
        }

        .filter-row .input-group {
            flex-grow: 1;
            margin-right: 10px;
        }

    .table-responsive {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table thead {
        background-color: #3b5998;
        color: white;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-custom {
        border-radius: 50px;
        font-size: 0.9rem;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        border-radius: 50%;
        color: white;
        transition: background-color 0.2s ease;
    }

        .btn-icon.btn-primary {
            background-color: #3b5998;
        }

        .btn-icon.btn-secondary {
            background-color: #6c757d;
        }

        .btn-icon.btn-danger {
            background-color: #dc3545;
        }

        .btn-icon:hover {
            filter: brightness(1.2);
        }

    .detail-label {
        background-color: #6c757d;
        color: white;
        padding: 5px;
        border-radius: 5px;
    }

    .detail-value {
        background-color: white;
        padding: 5px;
        border-radius: 5px;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="header text-center">
            <h3><strong>Detalles del Doctor</strong></h3>
        </div>

        @if (doctor != null)
        {
            <div class="card-body p-4">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="detail-label">ID:</div>
                        <div class="detail-value">@doctor.DoctorId</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">Nombre:</div>
                        <div class="detail-value">@doctor.Nombre</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">Apellido:</div>
                        <div class="detail-value">@doctor.Apellido</div>
                    </div>
                    <div class="col-md-3">
                        <div class="detail-label">Teléfono:</div>
                        <div class="detail-value">@doctor.Telefono</div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="detail-label">Email:</div>
                        <div class="detail-value">@doctor.Email</div>
                    </div>
                </div>

                <hr />

                <div class="header text-center">
                    <h4><strong>Especialidades del Doctor</strong></h4>
                </div>

                @if (doctor.DetalleDoctores != null && doctor.DetalleDoctores.Any())
                {
                    <div class="table-responsive mt-3">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Especialidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in doctor.DetalleDoctores)
                                {
                                    <tr>
                                        <td>@detalle.Especialidad</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">No hay especialidades...</div>
                }

                <div class="card-footer bg-light d-flex justify-content-end mt-3">
                    <a href="/Doctores/Index" class="btn btn-outline-danger btn-custom"><i class="fas fa-arrow-left"></i> Volver</a>
                </div>
            </div>
        }
    </div>
</div>

@code {
    public Doctores? doctor = new Doctores();

    [Parameter]
    public int DoctorId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await BuscarDoctor();
    }

    public async Task BuscarDoctor()
    {
        doctor = await doctoresService.Buscar(DoctorId);
    }
}
