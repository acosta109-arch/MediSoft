@page "/Doctores/Index"
@rendermode InteractiveServer
@inject DoctoresService doctoresService
@inject NavigationManager navigation

<PageTitle>Doctores</PageTitle>

<style>
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff; /* Fondo blanco para el contenedor principal */
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #3b5998;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .header h3 {
            margin: 0;
        }

    .filter-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .filter-row .form-label {
            font-weight: bold;
            margin-right: 10px;
        }

        .filter-row .input-group {
            flex-grow: 1;
            margin-right: 10px;
        }

    .table-responsive {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .table thead {
        background-color: #3b5998;
        color: white;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-custom {
        border-radius: 50px;
        font-size: 0.9rem;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        border-radius: 50%;
        color: white;
        transition: background-color 0.2s ease;
    }

        .btn-icon.btn-primary {
            background-color: #3b5998;
        }

        .btn-icon.btn-secondary {
            background-color: #6c757d;
        }

        .btn-icon.btn-danger {
            background-color: #dc3545;
        }

        .btn-icon:hover {
            filter: brightness(1.2);
        }
</style>

<div class="container mt-5">
    <div class="header">
        <h3><strong>Doctores</strong></h3>
        <a href="/Doctores/Create" class="btn btn-success bi bi-plus-circle-fill btn-custom"> Crear</a>
    </div>

    <div class="filter-row">
        <div class="d-flex align-items-center">
            <label for="Filtro" class="form-label">Filtrar por:</label>
            <InputSelect id="filtro" class="form-select" @bind-Value="filtro">
                <option value="" disabled>Seleccionar</option>
                <option value="id">DoctorId</option>
                <option value="nombre">Nombre</option>
                <option value="apellido">Apellido</option>
            </InputSelect>
        </div>
        <div class="input-group">
            <input @bind="valorFiltro" class="form-control" placeholder="Buscar" />
            <button @onclick="Buscar" class="btn btn-primary" type="button">
                <span class="bi bi-search-heart-fill"></span> Buscar
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered mt-3">
            <thead class="table-striped table-secondary text-black">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Detalles</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in doctoresFiltrados)
                {
                    <tr>
                        <td>DR-@doctor.DoctorId</td>
                        <td>@doctor.Nombre</td>
                        <td>@doctor.Apellido</td>
                        <td>@doctor.Telefono</td>
                        <td>@doctor.Email</td>
                        <td class="text-center">
                            <a href="/Doctores/Details/@doctor.DoctorId" class="btn-icon btn-primary bi bi-binoculars-fill"> </a>
                        </td>
                        <td class="text-center">
                            <a href="/Doctores/Edit/@doctor.DoctorId" class="btn-icon btn-secondary bi bi-pencil-fill"> </a>
                        </td>
                        <td class="text-center">
                            <a href="/Doctores/Delete/@doctor.DoctorId" class="btn-icon btn-danger bi bi-trash-fill"> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    public List<Doctores> doctores = new List<Doctores>();
    public List<Doctores> doctoresFiltrados = new List<Doctores>();
    public string filtro { get; set; } = "id";
    public string valorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        doctores = await doctoresService.Listar(d => true);
        doctoresFiltrados = doctores;
    }

    private void Buscar()
    {
        if (string.IsNullOrEmpty(valorFiltro))
        {
            doctoresFiltrados = doctores;
        }
        else
        {
            switch (filtro)
            {
                case "id":
                    if (int.TryParse(valorFiltro, out int id))
                    {
                        doctoresFiltrados = doctores.Where(d => d.DoctorId == id).ToList();
                    }
                    break;
                case "nombre":
                    doctoresFiltrados = doctores.Where(d => d.Nombre.Contains(valorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
                    break;
                case "apellido":
                    doctoresFiltrados = doctores.Where(d => d.Apellido.Contains(valorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
                    break;
            }
        }
    }
}
