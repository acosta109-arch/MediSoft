@page "/DisponibilidadesCards"
@inject DisponibilidadService disponibilidadService
@inject NavigationManager navigation

<PageTitle>Disponibilidades</PageTitle>

<style>
    .card {
        transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
        background-color: #4267B2; /* Color Facebook Blue */
        color: white; /* Color de texto blanco para contraste */
        border: 2px solid #28a745; /* Borde verde success */
        border-radius: 12px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil para profundidad */
    }

        .card:hover {
            transform: translateY(-8px); /* Movimiento sutil hacia arriba al pasar el mouse */
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2); /* Sombra más pronunciada al pasar el mouse */
        }

    .card-body {
        padding: 20px; /* Espaciado interno para el contenido */
    }

        .card-body img {
            width: 32px; /* Tamaño de imagen más grande */
            height: 32px;
            margin-right: 15px; /* Espaciado entre imagen y texto */
            border-radius: 50%; /* Imagen circular */
        }

    .card-title {
        font-size: 1.25rem; /* Tamaño de fuente para el título */
        margin-bottom: 10px; /* Espaciado debajo del título */
    }

    .card-text {
        font-size: 1rem; /* Tamaño de fuente para el texto */
        margin-bottom: 10px; /* Espaciado debajo del texto */
    }

    .btn-oval {
        border-radius: 50px; /* Bordes redondeados para los botones */
        border: none;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem; /* Tamaño de fuente para los botones */
        text-align: center; /* Centrar el texto en los botones */
    }

    .btn-success {
        background-color: #28a745; /* Color de fondo del botón */
        color: white;
    }

        .btn-success:hover {
            background-color: #218838; /* Color de fondo al pasar el mouse */
        }

    .header-icon {
        width: 3rem; /* Mismo tamaño que el texto h1 */
        height: 3rem; /* Mismo tamaño que el texto h1 */
        margin-right: 10px;
    }

    .header-title {
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 2.5rem; /* Tamaño de fuente para el h1 */
        text-align: center;
    }

    .header-container {
        margin-bottom: 20px; /* Espaciado debajo del encabezado */
    }

    .filter-row {
        margin-bottom: 15px; /* Espaciado debajo de los filtros */
    }

    .no-results {
        text-align: center;
        margin-top: 20px;
    }

        .no-results img {
            width: 80px; /* Tamaño de la imagen */
            height: 80px;
        }

        .no-results h3 {
            margin-top: 10px;
        }
</style>

<div class="container mt-5">
    <div class="row mb-3 header-container">
        <div class="col-md-12 d-flex align-items-center justify-content-center">
            <img class="header-icon" src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Icono" />
            <h1 class="header-title">&Aacute;rea de citas m&eacute;dicas</h1>
        </div>
    </div>

    <div class="row mb-3 filter-row">
        <div class="col-md-3">
            <label for="filtro" class="form-label"><strong>Filtrar por:</strong></label>
            <InputSelect id="filtro" class="form-select" @bind-Value="filtro">
                <option value="" disabled>Seleccionar</option>
                <option value="nombreDoctor">Nombre del Doctor</option>
                <option value="especialidad">Especialidad</option>
                <!-- Add more filter options here if needed -->
            </InputSelect>
        </div>
        <div class="col-md-6">
            <label for="valorFiltro" class="form-label"><strong>Búsqueda:</strong></label>
            <div class="input-group">
                <input @bind="valorFiltro" class="form-control" placeholder="Buscar" />
                <button @onclick="Buscar" class="btn btn-primary" type="button">
                    <span class="bi bi-search-heart-fill"></span> Buscar
                </button>
            </div>
        </div>
    </div>

    @if (disponibilidadesFiltradas.Any())
    {
        <div class="row">
            @foreach (var disponibilidad in disponibilidadesFiltradas)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <img src="https://png.pngtree.com/png-clipart/20221003/original/pngtree-medical-logo-png-image_8653959.png" alt="Medical Logo" />
                            <h5 class="card-title">Dr: @disponibilidad.Doctor?.NombreCompleto</h5>
                            <p class="card-text">Especialidad: @disponibilidad.Doctor?.Especialidad</p>
                            <p class="card-text">Disponibilidad: @disponibilidad.DiasDisponibilidad</p>
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <a href="/Informacion/@disponibilidad.DoctorId" class="btn btn-success btn-oval w-100 mb-2 bi bi-info-circle-fill">
                                        Información
                                    </a>
                                    <a href="/Citas/Index/@disponibilidad.DoctorId" class="btn btn-success btn-oval w-100 bi bi-eye-fill">
                                        Ver Turnos
                                    </a>
                                </div>
                                <div class="col-6 mb-2">
                                    <a href="/Citas/Create/@disponibilidad.DisponibilidadId" class="btn btn-success btn-oval w-100 mb-2 bi bi-person-fill-add">
                                        Agregar Cita
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (string.IsNullOrEmpty(valorFiltro))
    {
        <div class="text-center no-results">
            <img src="https://cdn-icons-png.flaticon.com/512/599/599625.png" alt="No Results" />
            <h3 class="mt-3">No hay doctores disponibles hasta el momento</h3>
            <p>Por favor, volver mas tarde. Att: Administraci&oacute;n.</p>
        </div>
    }
    else
    {
        <div class="text-center no-results">
            <img src="https://images.emojiterra.com/google/android-pie/512px/1f914.png" alt="No Doctors Available" />
            <h3 class="mt-3">Lo sentimos, no hay resultados con el filtro aplicado</h3>
            <p>Vuelva a intentarlo con otros criterios.</p>
        </div>
    }
</div>

@code {
    public List<Disponibilidades> disponibilidades = new List<Disponibilidades>();
    public List<Disponibilidades> disponibilidadesFiltradas = new List<Disponibilidades>();
    public string filtro { get; set; } = "nombreDoctor";
    public string valorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        disponibilidades = await disponibilidadService.ListarDisponibilidades();
        disponibilidadesFiltradas = disponibilidades;
    }

    private void Buscar()
    {
        if (string.IsNullOrEmpty(valorFiltro))
        {
            disponibilidadesFiltradas = disponibilidades;
        }
        else
        {
            switch (filtro)
            {
                case "nombreDoctor":
                    disponibilidadesFiltradas = disponibilidades
                        .Where(d => d.Doctor?.NombreCompleto.Contains(valorFiltro, StringComparison.OrdinalIgnoreCase) == true)
                        .ToList();
                    break;
                case "especialidad":
                    disponibilidadesFiltradas = disponibilidades
                        .Where(d => d.Doctor?.Especialidad.Contains(valorFiltro, StringComparison.OrdinalIgnoreCase) == true)
                        .ToList();
                    break;
                    // Add more cases for other filters if needed
            }
        }
    }
}
