        --btn-secondary-bg-color: #6c757d; 
        --btn-danger-bg-color: #dc3545; 
        --btn-text-color: white; 
        --card-bg-color: white;
        --card-border-color: #ddd; 
        --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        --input-border-color: #ccc; 
        --label-text-color: #000; 
    }

